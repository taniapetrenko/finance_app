<h1 style="line-height: 1.8">Генератор звітів</h1>
<%= form_with url: reports_report_path, method: :get do |f| %>
  <p>
    <%= label_tag(:start_date, 'Дата YYYY-MM-DD') %>
    <%= f.datetime_field :start_date %>
  </p>
  <p>
    <%= label_tag(:end_date, 'Дата YYYY-MM-DD') %>
    <%= f.datetime_field :end_date %>
  </p>
  <p>
    <%= label_tag(:operation, 'Тип операції') %>
    <%= f.select :operation_type, options_for_select(Operation.operation_types.map{ |key, _| [key.humanize.capitalize, key]}), prompt: "Виберіть тип операції" %>
  </p>
  <p>
    <%= label_tag(:category, 'Категорія') %>
    <%= f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name'), prompt: "Виберіть тип категорії" %>
  </p>

  <%= link_to 'Очистити', reports_path, class: 'btn btn-warning' %>
  <%= f.submit 'Графік', class: 'btn btn-success' %>
  <%= f.submit 'По датам', class: 'btn btn-outline-danger btn-rounded' %>
<% end %>
