<h1>Генератор звітів</h1>
<%= form_with url: reports_report_path, method: :get do |f| %>
  <p>
    <%= label_tag(:start_date, 'Дата YYYY-MM-DD') %>
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= label_tag(:end_date, 'Дата YYYY-MM-DD') %>
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= label_tag(:category, 'Категорія') %>
    <%= f.select 'category', options_from_collection_for_select(Category.all, 'id', 'name') %>
  </p>

  <%= f.submit 'По датам', class: 'btn btn-danger' %>
  <%= f.submit 'Графік', class: 'btn btn-success' %>
<% end %>
